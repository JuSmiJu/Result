<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/info_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="info"
        app:cardBackgroundColor="#3F4674"
        app:cardCornerRadius="20dp"
        app:contentPadding="5dp">

        <!--        <ImageView-->
        <!--            android:id="@+id/ris_on"-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_marginLeft="16dp"-->
        <!--            app:srcCompat="@drawable/ic_launcher_background"-->
        <!--            tools:ignore="VectorDrawableCompat" />-->

        <ImageView
            android:id="@+id/ris_of"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ofline" />

        <TextView
            android:id="@+id/textViewLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="3dp"
            android:textSize="18dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#CFCFD6" />

        <TextView
            android:id="@+id/textViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#67718F" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
